<div class="calendar-container">
  <section class="sidebar">
    <h2 id="title">Weekly Calendar</h2>
    <p>Today's Date: {{date}}</p>
  </section>

{{#el-weekly-calendar date=date events=events as |days|}}
    <div class="calendar">
      <div class="row">
        <div class="cell title">
        </div>
        <div class="cell title">
          Sunday
        </div>
        <div class="cell title">
          Monday
        </div>
        <div class="cell title">
          Tuesday
        </div>
        <div class="cell title">
          Wednesday
        </div>
        <div class="cell title">
          Thursday
        </div>
        <div class="cell title">
          Friday
        </div>
        <div class="cell title">
          Saturday
        </div>
      </div>
    <div class="week">
      <div class="day">
        {{#each days.firstObject.hours as |hour|}}
          <div>{{hour.formattedHour}}</div>
        {{/each}}
      </div>
      {{#each days as |day|}}
        <div class="day">
          <div>
            {{day.dayName}}
            {{day.date}}
          </div>
          {{#each day.hours as |hour|}}
            {{#if hour.events}}
              {{#each hour.events as |event|}}
                <div>
                  <strong>
                    {{hour.formattedHour}}: {{event.name}}
                  </strong>
                </div>
              {{/each}}
            {{/if}}
          {{/each}}
        </div>
      {{/each}}
    </div>
  </div>
{{/el-weekly-calendar}}
</div>
