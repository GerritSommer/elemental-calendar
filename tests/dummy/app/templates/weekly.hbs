<div class="calendar-container">
  <section class="sidebar">
    <h2 id="title">Weekly Calendar</h2>
    <p>Today's Date: {{date}}</p>
  </section>

{{#el-weekly-calendar date=date events=events as |days|}}
    <div class="calendar">
      <div class="row">
        <div class="cell title">
          Sunday
        </div>
        <div class="cell title">
          Monday
        </div>
        <div class="cell title">
          Tuesday
        </div>
        <div class="cell title">
          Wednesday
        </div>
        <div class="cell title">
          Thursday
        </div>
        <div class="cell title">
          Friday
        </div>
        <div class="cell title">
          Saturday
        </div>
      </div>
    <div class="week">
    {{#each days as |day|}}
      <div class="day">
        {{day.dayName}}
        {{day.date}}
        {{#each day.hours as |hour|}}
          {{hour.formattedHour}}
          {{#if hour.events}}
            <strong>Events:</strong>
            {{#each hour.events as |event|}}
              <strong>{{event.name}}</strong>
            {{/each}}
          {{/if}}
        {{/each}}
      </div>
    {{/each}}
    </div>
</div>
{{/el-weekly-calendar}}
</div>
