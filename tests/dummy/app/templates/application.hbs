<h2 id="title">Monthly Calendar</h2>
<p>Today's Date: {{date}}</p>

{{#el-monthly-calendar date=date events=events as |weeks| }}
  <table>
    <tr>
      <th>Sunday</th>
      <th>Monday</th>
      <th>Tuesday</th>
      <th>Wednesday</th>
      <th>Thursday</th>
      <th>Friday</th>
      <th>Saturday</th>
    </tr>
    {{#each weeks as |week|}}
      <tr>
        {{#each week.days as |day|}}
          <td>
            {{day.dayName}}
            {{day.date}}
          </td>
        {{/each}}
      </tr>
    {{/each}}
  </table>
{{/el-monthly-calendar}}
